# Program 1: Vypocet faktorialu (iterativne)
print('Zadejte cislo pro #vypocet faktorialu: ')
a = inputi()
print('Vybrano cislo', a)
c = a + 5
b = itfactorial(a)
print('Funkce vypocitala factorial',b)
def itfactorial(a):
 if a < 0: # chybi kontrola a == None pro pripad nevalidniho vstupu
  print("""
 Faktorial nelze spocitat""")
 else:
  vysl = 1
  while a > 0:
   print('Iterace jedou : a =', a, ', vysl =', vysl)
   vysl = vysl * a
   a = a - 1
  print('Vysledek je :', vysl, None, c)
